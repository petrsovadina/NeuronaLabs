# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_JWT_SECRET=your_jwt_secret_for_supabase

# Supabase Authentication
SUPABASE_SITE_URL=http://localhost:3000
SUPABASE_URI_ALLOW_LIST=http://localhost:3000,http://localhost:3020

# Optional External Authentication
SUPABASE_GOOGLE_AUTH_ENABLED=false
SUPABASE_GOOGLE_CLIENT_ID=your_google_client_id
SUPABASE_GOOGLE_CLIENT_SECRET=your_google_client_secret

# Database Configuration
POSTGRES_DB=neuronalabs
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_postgres_password
POSTGRES_PORT=5432

# Service Ports (Optional - Override default ports)
SUPABASE_DB_PORT=54321
SUPABASE_STUDIO_PORT=3020
BACKEND_PORT=5000
FRONTEND_PORT=3000
ORTHANC_PORT=8042
OHIF_PORT=3010
PROMETHEUS_PORT=9090
GRAFANA_PORT=3100
SEQ_PORT=5341
SEQ_WEB_PORT=8081

# Backend Configuration
ASPNETCORE_ENVIRONMENT=Development
JWT_SECRET_KEY=your_very_long_and_secure_secret_key_here
JWT_ISSUER=NeuronaLabsAuthServer
JWT_AUDIENCE=NeuronaLabsClients
JWT_EXPIRATION_MINUTES=120

# Orthanc DICOM Server
ORTHANC_BASE_URL=http://orthanc:8042
DICOM_STORAGE_PATH=/var/lib/dicom_storage

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://backend
NEXT_PUBLIC_OHIF_URL=http://ohif-viewer
NEXT_PUBLIC_SUPABASE_URL=${SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

# Monitoring and Logging
PROMETHEUS_SCRAPE_INTERVAL=15s
SEQ_RETENTION_DAYS=30

# Security Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_REQUESTS_PER_MINUTE=100
PASSWORD_COMPLEXITY_ENABLED=true
PASSWORD_SALT=your_secure_password_salt
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION_MINUTES=15

# Optional: External Services
SENTRY_DSN=your_sentry_dsn_if_used
DATADOG_API_KEY=your_datadog_api_key_if_used

# Development and Debugging
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
LOG_LEVEL=Debug